<%= form_for(@rating) do |f| %>
  <%= f.hidden_field :customer_id, value: customer_id %>
  <%= f.hidden_field :opinion_id, value: opinion %>
  <%= f.label :usefulness %>
  <%= f.select :usefulness, options_for_select([["Useless","0"], ["Useful", "1"], ["Very Useful", "2"]],2), class: "label-rating" %>
  <%= f.submit "Rate Opinion", class: "btn btn-primary rating-button" %>
<% end %>
