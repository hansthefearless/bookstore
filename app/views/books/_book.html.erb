<div class="row each-book">
  <img class="thumbnails" src="<%= book.thumbnail%>" alt="thumbnail" align="left" />
  <li>Title: <%= book.title %></li>
  <li>Authors: <%= book.authors %></li>
  <li>Publisher: <%= book.publisher %></li>
  <li>Subject: <%= book.subject %></li>
  <li>Year: <%= book.year %></li>
  <li>Price: $<%= book.price %>.00</li>
  <li>Quantity in stock: <%= book.copies %></li>
  <% if logged_in? %>
    <li><%= link_to "More Information", book_path(book) %></li>
    <li>
      <%= form_tag(add_to_cart_path, :method => 'post', :remote => true) do %>
        <%= hidden_field_tag(:book, book.id) %>
        <%= button_tag("Add to Cart") %>
      <% end %>
    </li>
  <% elsif logged_in_admin? %>
    <li><%= link_to "Edit", edit_book_path(book), method: :get %> </li>
    <li><%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure?" } %> </li>
  <% end %>
</div>
