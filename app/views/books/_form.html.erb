<%= form_for(@book) do |f| %>

  <%= render 'shared/book_error_messages', object: @book %>

  <%= f.label :ISBN, "ISBN" %>
  <%= f.text_field :ISBN, class: 'form-control' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :authors %>
  <%= f.text_field :authors, class: 'form-control' %>

  <%= f.label :publisher %>
  <%= f.text_field :publisher, class: 'form-control' %>

  <%= f.label :subject %>
  <%= f.text_field :subject, class: 'form-control' %>

  <%= f.label :year %>
  <%= f.number_field :year, class: 'form-control' %>

  <%= f.label :keywords %>
  <%= f.text_field :keywords, class: 'form-control' %>

  <%= f.label :format %>
  <%= f.text_field :format, class: 'form-control' %>

  <%= f.label :thumbnail %>
  <%= f.url_field :thumbnail, class: 'form-control' %>

  <%= f.label :copies %>
  <%= f.number_field :copies, class: 'form-control' %>

  <%= f.label :price %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary submit-button" %>
  <%= link_to "Back", back_path, :method => 'post' %>

<% end %>
