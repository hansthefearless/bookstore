<%= form_tag({controller: "books", action: "find"}, method: "get") do %>
  <div class="labels">
    <%= label_tag(:title, "Title") %>
    <%= text_field_tag(:title)  %>

    <%= label_tag(:authors, "Authors") %>
    <%= text_field_tag(:authors) %>

    <%= label_tag(:publisher, "Publisher") %>
    <%= text_field_tag(:publisher) %>

    <%= label_tag(:subject, "Subject") %>
    <%= text_field_tag(:subject) %>
  </div>

  <%= label_tag(:sort, "Sort by", class: 'sort-label') %>
  <%= select_tag(:sort, options_for_select([["None","none"], ["Year", "year"], ["Average Ratings of Feedback", "rating"]],2)) %>

  <%= submit_tag(yield(:button_text), class: "btn btn-primary search-button") %>

<% end %>
