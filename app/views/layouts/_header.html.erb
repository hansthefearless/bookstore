<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "B&N", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if !logged_in? && !logged_in_admin? %>
          <li><%= link_to "Log In", login_path %></li>
        <% elsif logged_in? %>
          <li><%= link_to "Book Search", search_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "View Cart", cart_path %></li>
              <li><%= link_to "Profile", current_customer %></li>
              <li><%= link_to "Edit", edit_customer_path(current_customer) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% elsif logged_in_admin? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Statistics", admin_path(current_admin.id) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", admin_logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
